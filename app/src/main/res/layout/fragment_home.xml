<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnMoneyTransfer"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:textSize="10dp"
        android:drawableTop="@drawable/baseline_home_24"
        android:text="Money Transf"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnBalanceEnquiry"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_margin="10dp"
        android:textSize="10dp"
        android:layout_height="wrap_content"
        android:drawableTop="@drawable/baseline_home_24"
        android:text="Balance Enquiry"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnHistory"
        android:layout_width="0dp"
        android:layout_margin="10dp"
        android:textSize="10dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:drawableTop="@drawable/baseline_home_24"
        android:text="History\n check"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnRewards"
        android:layout_width="0dp"
        android:layout_margin="10dp"
        android:textSize="10dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:drawableTop="@drawable/baseline_home_24"
        android:text="Reward\nReward"/>

</LinearLayout>
